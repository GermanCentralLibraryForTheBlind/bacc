{
  "name": "bacc-backend",
  "version": "0.6.0",
  "description": "Backend for BACC",
  "license": "MIT",
  "author": {
    "name": "DZB developers",
    "organization": "DZB",
    "url": "https://dzb.de/",
    "email": "lars.voigt@dzb.de"
  },
  "scripts": {
    "clean:uploads": "rimraf uploads",
    "start": "node ./webApi",
    "start:prod:test": "./node_modules/.bin/pm2 start webApi.js --name bacc",
    "start:prod": "BACC=prod ./node_modules/.bin/pm2 start webApi.js --name bacc",
    "stop": "node ./node_modules/.bin/pm2 stop bacc",
    "reload": "node ./node_modules/.bin/pm2 reload all",
    "pm2:log": "node ./node_modules/.bin/pm2 logs ",
    "clear:bacc:log": "rimraf bacc.log",
    "post:deploy": "npm install && npm run reload",
    "test": "date && mocha tests --recursive",
    "postinstall:proxy": "cd ./node_modules/ && export http_proxy=http://192.168.1.135:8080 && export https_proxy=$http_proxy && export HTTP_PROXY=$http_proxy && export HTTPS_PROXY=$http_proxy && rm -rf ace-core && git clone -b get-all-rules https://github.com/larsvoigt/ace-core && cd ace-core && lerna bootstrap",
    "postinstall": "cd ./node_modules/ && rm -rf ace-core && git clone -b get-all-rules https://github.com/larsvoigt/ace-core && cd ace-core && lerna bootstrap && cd ../../ && npm run post:axe:locale",
    "post:axe:locale": "cp ./report/locales/axe_de.json ./node_modules/ace-core/node_modules/axe-core/locales/de.json && cd ./node_modules/ace-core/node_modules/axe-core/ && npm i && ./node_modules/grunt/bin/grunt build --all-lang"
  },
  "private": true,
  "dependencies": {
    "child-process-promise": "^2.2.1",
    "core-js": "^2.4.1",
    "cors": "^2.8.4",
    "dateformat": "^2.2.0",
    "debug": "^3.0.0",
    "express": "^4.15.4",
    "fs-extra": "^5.0.0",
    "ip": "^1.1.5",
    "multer": "^1.3.0",
    "mustache": "^2.3.0",
    "node-schedule": "^1.2.4",
    "pm2": "^2.6.1",
    "rimraf": "^2.6.1",
    "rxjs": "^5.4.1",
    "sendmail": "^1.2.0",
    "ua-parser": "^0.3.5",
    "underscore": "^1.8.3",
    "uuid": "^3.1.0",
    "winston": "^2.3.1",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "chai": "^4.1.1",
    "chai-http": "^3.0.0",
    "chai-match": "^1.1.1",
    "mocha": "^3.5.0"
  }
}
